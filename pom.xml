<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<name>Sakai Sms</name>
	<groupId>org.sakaiproject.sms</groupId>
	<artifactId>sms</artifactId>
	<organization>
		<name>Sakai Project</name>
		<url>http://sakaiproject.org/</url>
	</organization>
	<inceptionYear>2008</inceptionYear>
	<packaging>pom</packaging>
	<description>The SMS service provides SMS (short message service or
		texting) capablities to Sakai.The module consists of 1) A SMPP service
		to forward messages to an SMPP complient gateway. 2) An admin tool to
		administer accounts 3) A user tool to send messages to users</description>
	<!-- Sakai master pom is the parent -->
	<parent>
		<artifactId>master</artifactId>
		<groupId>org.sakaiproject</groupId>
		<version>12-SNAPSHOT</version>
		<relativePath>../master/pom.xml</relativePath>
	</parent>
	<properties>
		<skipTests>true</skipTests>
	</properties>
	<profiles>
		<profile>
			<id>full</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<module>api</module>
				<module>stubs</module>
				<module>impl</module>
				<module>pack</module>
				<module>tool</module>
				<module>user-tool</module>
				<module>help</module>
				<module>util</module>
			</modules>
		</profile>
		<profile>
			<id>tool</id>
			<modules>
				<module>tool</module>
			</modules>
		</profile>
		<profile>
			<id>user-tool</id>
			<modules>
				<module>user-tool</module>
			</modules>
		</profile>
		<profile>
			<id>api</id>
			<modules>
				<module>api</module>
			</modules>
		</profile>
	</profiles>

	<!-- handles the management of all related dependencies -->
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>sms-api</artifactId>
				<version>${project.version}</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>sms-util</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>sms-impl</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>sms-stubs</artifactId>
				<version>${project.version}</version>
				<scope>test</scope>
			</dependency>
			<dependency>
				<groupId>net.sourceforge.groboutils</groupId>
				<artifactId>groboutils-core</artifactId>
				<version>5</version>
			</dependency>
			<dependency>
				<groupId>com.google.code</groupId>
				<artifactId>jsmpp</artifactId>
				<version>2.1.0</version>
			</dependency>
			<dependency>
                <groupId>com.mobilvox.ossi.mojo</groupId>
                <artifactId>maven-js-plugin</artifactId>
                <version>1.3</version>
             </dependency>
		</dependencies>
	</dependencyManagement>
	<repositories>
		<repository>
			<id>Sakai</id>
			<name>Sakai Maven Repo</name>
			<url>http://source.sakaiproject.org/maven2</url>

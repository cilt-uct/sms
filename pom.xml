<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <name>Sakai Sms</name>
  <groupId>org.sakaiproject.sms</groupId>
  <artifactId>sms</artifactId>
  <organization>
    <name>Sakai Project</name>
    <url>http://sakaiproject.org/</url>
  </organization>
  <inceptionYear>2008</inceptionYear>
  <packaging>pom</packaging>
  <description>The SMS service provides SMS (short message service or
    texting) capablities to Sakai.The module consists of 1) A SMPP service
    to forward messages to an SMPP complient gateway. 2) An admin tool to
    administer accounts 3) A user tool to send messages to users</description>
  <!-- Sakai master pom is the parent -->
  <parent>
    <artifactId>master</artifactId>
    <groupId>org.sakaiproject</groupId>
    <version>19-SNAPSHOT</version>
    <relativePath>../master/pom.xml</relativePath>
  </parent>
  <profiles>
    <profile>
      <id>full</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <modules>
        <module>api</module>
        <module>stubs</module>
        <module>impl</module>
        <module>tool</module>
        <module>user-tool</module>
        <module>help</module>
        <module>util</module>
      </modules>
    </profile>
    <profile>
      <id>tool</id>
      <modules>
        <module>tool</module>
      </modules>
    </profile>
    <profile>
      <id>user-tool</id>
      <modules>
        <module>user-tool</module>
      </modules>
    </profile>
    <profile>
      <id>api</id>
      <modules>
        <module>api</module>
      </modules>
    </profile>
  </profiles>

  <!-- handles the management of all related dependencies -->
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>sms-api</artifactId>
        <version>${project.version}</version>
        <scope>provided</scope>
